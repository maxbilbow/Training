package fjwa.service;

import java.util.List;

import fjwa.model.Bomb;

public interface BombService {
	List<Bomb> findAllBombs();
	BombService addBomb(Bomb bomb);
	BombService addBomb();
	void diffuse();
	List<Bomb> update();
	void cleanUp() throws RMXException;	
	
	Bomb save(Bomb bomb);
	Bomb save();
	Bomb remove(Bomb bomb);
	Bomb remove(long id);
	
	@Deprecated
	void removeExpired();
	String getErrors();
	
}
